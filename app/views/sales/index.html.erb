<p id="notice"><%= notice %></p>

<div class="properties-index">

    <h1>TODAS LAS PROPIEDADES</h1>

    <% @properties_for_sale.each do |property| %>
    <div class="list-container">    
        <%= image_tag property.image_url %>

        <div class="properties-info">

            <div class="properties-title">
                <h2><%= property.address %>, <%= property.district %>, <%= property.city %></h2>
            </div>

            <div class="properties-specs">
                <p>Precio: $ <%= number_with_delimiter(property.price, delimiter: ".") %></p>
                <p>Superficie Total: <%= number_with_delimiter(property.total_area, delimiter: ".") %> m2</p>
                <p>Dormitorios: <%= property.rooms %></p>
                <p>Ba√±os: <%= property.toilets %></p>
            </div>

            <div class="crud-buttons">
                <%= link_to property do%>
                <button>VER PROPIEDAD</button>
                <% end %>
                
                <% if admin_signed_in? %>     
                    <%= link_to 'Edit', edit_property_path(property), class: "edit-button" %>
                    <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-button" %>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>  

</div>

