<div class="contact-page">
	<h1>FORMULARIO DE CONTACTO</h1>


	<div class="contact-form">
		<%= form_for @contact_form, url: pages_contact_path, :method => :post do |f| %>
		  <%= f.text_field :name, placeholder: "NOMBRE" %><br />

		  <%= f.number_field :phone, placeholder: "TELEFONO" %><br />

		  <%= f.text_field :email, placeholder: "EMAIL" %><br />

		  <%= f.text_field :subject, placeholder: "ASUNTO" %><br />

		  <%= f.text_field :message, placeholder: "MENSAJE" %><br />

		  <%= f.submit %>
		<% end %>
	</div>

	<div class="contact-info">
		<img src="https://s3-us-west-2.amazonaws.com/ecoprop/logo.png" alt="">
		<p>Direccion: Dario Urzua #1650, Providencia</p>
		<p>Fono: +56984459749</p>
		<p>Email: contacto@ecoprop.cl</p>
	</div>
</div>