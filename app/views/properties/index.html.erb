<p id="notice"><%= notice %></p>

<div class="properties-index">

    <h1>TODAS LAS PROPIEDADES</h1>

    <% @properties.each do |property| %>
    <div class="list-container">    
        <img src="/assets/campo.jpg" alt="casa-campo">

        <div>
            <div class="properties-title">
                <h2><%= property.address %>, <%= property.district %>, <%= property.city %></h2>
                <h3><%= property.description %></h3>
            </div>

            <div class="properties-specs">
                <p>Precio: <%= property.price %> UF</p>
                <p>Superficie Total<%= property.total_area %></p>
                <p>Dormitorios: <%= property.rooms %></p>
                <p>Baños: <%= property.toilets %></p>
            </div>

            <button><%= link_to "VER PROPIEDAD", property %></button>
            <%= link_to 'Edit', edit_property_path(property) %>
            <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
    <% end %>



    <div class="list-container">    
        <img src="https://s3-us-west-2.amazonaws.com/ecoprop/img/depa-serena-2.jpg" alt="casa-campo">
        <div>
            <div class="properties-title">
                <h2></h2>
                <h3></h3>
            </div>
            <div class="properties-specs">
                <p>Precio:  UF</p>
                <p>Superficie Total</p>
                <p>Dormitorios:</p>
                <p>Baños:</p>
            </div>
            <button>VER PROPIEDAD</button>
        </div>
    </div>    

</div>

