                <th>Rooms</th>
                <th>Toilets</th>
                <th>Floors</th>
                <th>Total area</th>
                <th>House area</th>
                <th>Pool</th>
                <th>Furnished</th>
                <th>Parking</th>
                <th>Cellar</th>
                <th>House</th>
                <th>Apartment</th>
                <th>Terreain</th>
                <th>Common expenses</th>
                <th>District</th>
                <th>City</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
        <% @properties.each do |property| %>
            <tr>
            <td><%= property.address %></td>
            <td><%= property.price %></td>
            <td><%= property.description %></td>
            <td><%= property.rooms %></td>
            <td><%= property.toilets %></td>
            <td><%= property.floors %></td>
            <td><%= property.total_area %></td>
            <td><%= property.house_area %></td>
            <td><%= property.pool %></td>
            <td><%= property.furnished %></td>
            <td><%= property.parking %></td>
            <td><%= property.cellar %></td>
            <td><%= property.house %></td>
            <td><%= property.apartment %></td>
            <td><%= property.terreain %></td>
            <td><%= property.common_expenses %></td>
            <td><%= property.district %></td>
            <td><%= property.city %></td>
            <td><%= link_to 'Show', property %></td>
