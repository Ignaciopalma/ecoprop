        <img src="/assets/campo.jpg" alt="casa-campo">

        <div>
            <div class="property-title">
                <h2><%= property.address %>, <%= property.district %>, <%= property.city %></h2>
                <h3><%= property.description %></h3>
            </div>

            <div class="property-specs">
                <p>Precio: <%= property.price %> UF</p>
                <p>Superficie Total<%= property.total_area %></p>
                <p>Dormitorios: <%= property.rooms %></p>
                <p>Ba√±os: <%= property.toilets %></p>
            </div>

            <button><%= link_to "VER PROPIEDAD", property %></button>
        </div>
    </div>
    <% end %>    

</div>

    


    <h1>Listing Properties</h1>

    <table>
        <thead>
            <tr>
                <th>Address</th>
                <th>Price</th>
