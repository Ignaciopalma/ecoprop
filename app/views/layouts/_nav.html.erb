			</div>
			<% end %>
		</div>

		<% if admin_signed_in? %>
		<div class="dropdown">
			<%= link_to pages_panel_path do %>
			<div class="dropdown-container">
				<p class="dropdown-button" style="background:blue;">MENSAJES</p>
			</div>
			<% end %>
		</div>
		<% else %>
		<div class="dropdown">
			<%= link_to pages_about_path do %>
			<div class="dropdown-container">
				<p class="dropdown-button">QUIENES SOMOS</p>
			</div>
			<% end %>
		</div>
		<% end %>

		<div class="dropdown">
		  <div class="dropdown-container">
		    <p class="dropdown-button">EN VENTA</p>
		    <ul class="dropdown-menu dropdown-select">

				<%= link_to properties_path do %>
					<li>Todos</li>
				<% end %>

				<%= link_to sales_house_path do %>
					<li>Casas</li>
				<% end %>

				<%= link_to sales_apartment_path do %>
					<li>Departamentos</li>
				<% end %>

				<%= link_to sales_terrain_path do %>
					<li>Terreno</li>
				<% end %>
		    </ul>
		  </div>
		</div>

		<div class="dropdown">
		  <div class="dropdown-container">
		    <p class="dropdown-button">EN ARRIENDO</p>
		    <ul class="dropdown-menu dropdown-select">

				<%= link_to properties_path do %>
					<li>Todos</li>
				<% end %>

				<%= link_to rents_house_path do %>
					<li>Casas</li>
				<% end %>

				<%= link_to rents_apartment_path do %>
					<li>Departamentos</li>
				<% end %>

				<%= link_to rents_terrain_path do %>
					<li>Terreno</li>
				<% end %>
		    </ul>
		  </div>
		</div>


		<% if admin_signed_in? %>
		<div class="dropdown">
			<%= link_to destroy_admin_session_path, :method => :delete do %>
			<div class="dropdown-container">
				<p class="dropdown-button" style="background:red;">CERRAR SESION</p>
			</div>
			<% end %>
		</div>
		<% else %>
		<div class="dropdown">
			<%= link_to pages_contact_path do %>
			<div class="dropdown-container">
				<p class="dropdown-button">CONTACTO</p>
			</div>
			<% end %>
		</div>
		<% end %>
	</div>


</nav>


<script>
	$(function(){
		$('#menu').slicknav();
	});
</script>

<script>
	$(document).ready(function() {
	  $(".dropdown-button").click(function() {
	    var $button, $menu;
	    $button = $(this);
	    $menu = $button.siblings(".dropdown-menu");
	    $menu.toggleClass("show-menu");
	    $menu.children("li").click(function() {
	      $menu.removeClass("show-menu");
	      $button.html($(this).html());
	    });
	  });
	});
</script>