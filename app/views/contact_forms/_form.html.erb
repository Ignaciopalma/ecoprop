<%= form_for ContactForm.new do |f| %>
  <%= f.text_field :name, placeholder: "NOMBRE" %><br />

  <%= f.number_field :phone, placeholder: "TELEFONO" %><br />

  <%= f.text_field :email, placeholder: "EMAIL" %><br />

  <%= f.text_field :subject, placeholder: "ASUNTO" %><br />

  <%= f.text_area :message, placeholder: "MENSAJE", rows: "7", cols: "50" %><br />

  <%= f.submit "Enviar" %>
<% end %>